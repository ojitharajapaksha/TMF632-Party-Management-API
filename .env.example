# Consent Management System - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/consent-management

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Audit Configuration
AUDIT_RETENTION_DAYS=2555  # 7 years for PDPA compliance
ENABLE_AUDIT_LOGGING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Third-party Integrations
TM_FORUM_API_KEY=your-tmf-api-key
EXTERNAL_API_TIMEOUT=30000

# Compliance Settings
PDPA_COMPLIANCE_MODE=true
AUTO_CONSENT_EXPIRY=true
CONSENT_EXPIRY_MONTHS=12

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
